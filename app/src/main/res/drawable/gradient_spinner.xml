<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <layer-list>
            <item>
                <shape>
                    <gradient android:angle="90" android:endColor="@color/colorWhite" android:startColor="#E8EBEF" android:type="linear" />

                    <stroke android:width="2dp" android:color="@color/grey" />

                    <corners android:radius="15dp" />

                    <padding android:bottom="5dp" android:left="5dp" android:right="5dp" android:top="5dp" />
                </shape>
            </item>
            <item>
                <bitmap android:gravity="bottom|right" android:src="@drawable/down_arrow" android:tint="@color/grey" />
            </item>
        </layer-list>
    </item>

</selector>