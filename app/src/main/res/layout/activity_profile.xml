<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/newPrimaryColor">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:text="SaveMemory"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

    </RelativeLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="15dp"
                app:cardElevation="4dp">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:id="@+id/rr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <android.support.v7.widget.AppCompatImageView
                            android:id="@+id/activityProfileBackIV"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:padding="12dp"
                            android:src="@drawable/image_back"
                            android:tint="@color/newPrimaryColor" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:padding="12dp"
                            android:text="Settings"
                            android:textColor="@android:color/black"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/myinfoTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="32dp"
                            android:layout_marginEnd="5dp"
                            android:text="My Information"
                            android:textColor="#007AFF"
                            android:textSize="24sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/myinfoTv"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="32dp"
                            android:text="Essentials" />

                    </RelativeLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/rr"
                        android:layout_margin="16dp"
                        android:layout_marginTop="44dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/activityProfileEditLL"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <android.support.v7.widget.AppCompatImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center"
                                android:padding="2dp"
                                android:src="@drawable/image_edit"
                                android:tint="#00BFFF" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:padding="10dp"
                                android:text="Edit"
                                android:textColor="#00BFFF" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:orientation="vertical">

                            <!--  <TextView-->
                            <!--      android:layout_width="0dp"-->
                            <!--      android:layout_height="match_parent"-->
                            <!--      android:layout_weight="1"-->
                            <!--      android:gravity="start|center"-->
                            <!--      android:text="Name"-->
                            <!--      android:textSize="14sp" />-->

                            <!--  <EditText-->
                            <!--      android:id="@+id/activityProfileFirstNameET"-->
                            <!--      android:layout_width="0dp"-->
                            <!--      android:layout_height="match_parent"-->
                            <!--      android:layout_weight="1"-->
                            <!--      android:backgroundTint="@color/newDimText"-->
                            <!--      android:enabled="false"-->
                            <!--      android:hint="First Name"-->
                            <!--      android:textSize="14sp" />-->

                            <!--  <EditText-->
                            <!--      android:id="@+id/activityProfileLastNameET"-->
                            <!--      android:layout_width="0dp"-->
                            <!--      android:layout_height="match_parent"-->
                            <!--      android:layout_weight="1"-->
                            <!--      android:backgroundTint="@color/newDimText"-->
                            <!--      android:enabled="false"-->
                            <!--      android:hint="Last Name"-->
                            <!--      android:textSize="14sp" />-->


                            <EditText
                                style="@style/edittext"
                                android:hint="Your full legal name" />


                            <EditText
                                style="@style/edittext"

                                android:layout_marginTop="8dp" />

                            <EditText
                                style="@style/edittext"
                                android:layout_marginTop="8dp" />

                            <EditText
                                style="@style/edittext"
                                android:layout_marginTop="8dp"
                                android:hint="Email" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="24dp"
                                android:text="Optional"
                                android:textSize="24sp" />


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginTop="12dp"
                                android:background="@drawable/edittext">

                                <Spinner
                                    android:id="@+id/activityProfileISDSpinner"
                                    android:layout_width="48dp"
                                    android:layout_height="match_parent"
                                    android:layout_centerVertical="true"
                                    android:background="@null"
                                    android:backgroundTint="@color/textDark" />

                                <EditText
                                    android:id="@+id/activityProfilePhoneET"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_toRightOf="@+id/activityProfileISDSpinner"
                                    android:background="@null"
                                    android:backgroundTint="@color/newDimText"
                                    android:enabled="false"
                                    android:hint="Phone number"
                                    android:inputType="phone"
                                    android:paddingLeft="8dp"
                                    android:textSize="14sp" />

                            </RelativeLayout>


                            <LinearLayout
                                style="@style/edittext"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginStart="5dp"
                                android:layout_marginEnd="5dp"
                                android:orientation="horizontal"
                                android:weightSum="3">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="start|center"
                                    android:text="@string/nationality"
                                    android:textSize="14sp" />

                                <Spinner
                                    android:id="@+id/activityProfileNationalitySpinner"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="2"
                                    android:backgroundTint="@color/textDark" />

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:orientation="horizontal"
                            android:weightSum="3">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="start|center"
                                android:text="DOB"
                                android:textSize="14sp" />

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight=".66">

                                <Spinner
                                    android:id="@+id/activityProfileDateSpinner"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@null" />

                                <android.support.v7.widget.AppCompatImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerVertical="true"
                                    android:src="@drawable/image_down_arrow"
                                    android:tint="@android:color/black" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight=".66">

                                <Spinner
                                    android:id="@+id/activityProfileMonthSpinner"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@null" />

                                <android.support.v7.widget.AppCompatImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerVertical="true"
                                    android:src="@drawable/image_down_arrow"
                                    android:tint="@android:color/black" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight=".66">

                                <Spinner
                                    android:id="@+id/activityProfileYearSpinner"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@null" />

                                <android.support.v7.widget.AppCompatImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerVertical="true"
                                    android:src="@drawable/image_down_arrow"
                                    android:tint="@android:color/black" />

                            </RelativeLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:orientation="horizontal"
                            android:weightSum="3">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="start|center"
                                android:text="Sex"
                                android:textSize="14sp" />

                            <Spinner
                                android:id="@+id/activityProfileSexSpinner"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:backgroundTint="@color/textDark" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:orientation="horizontal"
                            android:weightSum="3">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="start|center"
                                android:text="@string/email"
                                android:textSize="14sp" />

                            <EditText
                                android:id="@+id/activityProfileEmailET"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:backgroundTint="@color/newDimText"
                                android:enabled="false"
                                android:hint="Direct Input"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:orientation="horizontal"
                            android:weightSum="3">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="start|center"
                                android:text="@string/phone_no"
                                android:textSize="14sp" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:orientation="horizontal"
                                android:weightSum="1">

                                <Spinner
                                    android:id="@+id/activityProfileISDSpinner"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight=".4"
                                    android:background="@null"
                                    android:backgroundTint="@color/textDark" />

                                <EditText
                                    android:id="@+id/activityProfilePhoneET"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight=".6"
                                    android:backgroundTint="@color/newDimText"
                                    android:enabled="false"
                                    android:hint="Phone number"
                                    android:inputType="phone"
                                    android:textSize="14sp" />

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:orientation="horizontal"
                            android:weightSum="3">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="start|center"
                                android:text="@string/nationality"
                                android:textSize="14sp" />

                            <Spinner
                                android:id="@+id/activityProfileNationalitySpinner"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:backgroundTint="@color/textDark" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:orientation="horizontal"
                            android:weightSum="3">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="start|center"
                                android:text="Living Country"
                                android:textSize="14sp" />

                            <EditText
                                android:id="@+id/activityProfileCountryET"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:backgroundTint="@color/newDimText"
                                android:enabled="false"
                                android:hint="Direct Input"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:orientation="horizontal"
                            android:weightSum="3">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="start|center"
                                android:text="Marital Status"
                                android:textSize="14sp" />

                            <Spinner
                                android:id="@+id/activityProfileMaritalStatusSpinner"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:backgroundTint="@color/textDark" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:orientation="horizontal"
                            android:weightSum="3">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="start|center"
                                android:text="Occupation"
                                android:textSize="14sp" />

                            <EditText
                                android:id="@+id/activityProfileOccupationET"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:backgroundTint="@color/newDimText"
                                android:enabled="false"
                                android:hint="Direct Input"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:orientation="horizontal"
                            android:weightSum="3">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="start"
                                android:paddingTop="10dp"
                                android:text="Postal address"
                                android:textSize="14sp" />

                            <EditText
                                android:id="@+id/activityProfileAddressET"
                                android:layout_width="0dp"
                                android:layout_height="100dp"
                                android:layout_gravity="start"
                                android:layout_weight="2"
                                android:backgroundTint="@color/newDimText"
                                android:enabled="false"
                                android:gravity="start"
                                android:hint="Type start here"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/activityProfileSaveTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:padding="10dp"
                            android:text="Save"
                            android:textColor="#00BFFF"
                            android:textSize="18sp"
                            android:visibility="gone" />

                    </LinearLayout>
                </RelativeLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>