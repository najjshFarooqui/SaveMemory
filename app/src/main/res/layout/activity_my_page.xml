<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/rr"
            android:layout_width="match_parent"
            android:layout_height="60dp">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:scaleType="fitXY"
                android:src="@drawable/set" />


            <ImageView
                android:id="@+id/ivSettings"

                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:layout_marginRight="12dp"
                android:layout_marginBottom="12dp"
                android:src="@drawable/ic_settings_black_24dp"

                />

            <ImageView
                android:id="@+id/ivSearch"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="24dp"
                android:layout_marginRight="56dp"
                android:layout_toLeftOf="@+id/ivSettings"
                android:src="@drawable/image_search" />


        </RelativeLayout>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rr"

            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp">


                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/activityMyPageBackIV"
                        android:layout_width="54dp"
                        android:layout_height="54dp"
                        android:layout_marginLeft="16dp"
                        android:padding="12dp"
                        android:src="@drawable/image_back"
                        android:tint="@color/newPrimaryColor" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="Settings"
                        android:textColor="@android:color/black"
                        android:textSize="32sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="32dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp"
                            android:text="Account"
                            android:textColor="@android:color/black"
                            android:textSize="23sp" />

                        <RelativeLayout
                            android:id="@+id/activityMyPageProfileLL"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:orientation="horizontal">

                            <android.support.v7.widget.AppCompatImageView
                                android:id="@+id/iv_info"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_centerVertical="true"
                                android:padding="5dp"
                                android:src="@drawable/ic_user" />

                            <TextView
                                style="@style/bluetext"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start|center"
                                android:layout_marginStart="10dp"
                                android:layout_toRightOf="@id/iv_info"

                                android:text="My Information"
                                android:textSize="16sp" />


                        </RelativeLayout>

                        <View
                            style="@style/horizontal_line"
                            android:layout_alignBottom="@+id/activityMyPageProfileLL"
                            android:layout_marginTop="8dp" />

                        <LinearLayout
                            android:id="@+id/activityMyPageMyBeneficiaryLL"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <android.support.v7.widget.AppCompatImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:padding="5dp"
                                android:src="@drawable/image_my_heritor" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start|center"
                                android:layout_marginStart="10dp"
                                android:text="My heritor/beneficiary"
                                android:textSize="15sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/activityMyPageMyWillLL"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <android.support.v7.widget.AppCompatImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:padding="5dp"
                                android:src="@drawable/image_my_last_word" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start|center"
                                android:layout_marginStart="10dp"
                                android:text="My Will"
                                android:textSize="15sp" />

                        </LinearLayout>

                        <RelativeLayout
                            android:id="@+id/activityMyPageMyStorageLL"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:orientation="horizontal">

                            <android.support.v7.widget.AppCompatImageView
                                android:id="@+id/id_storage"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_centerVertical="true"
                                android:padding="5dp"
                                android:src="@drawable/ic_database" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start|center"
                                android:layout_marginStart="10dp"
                                android:layout_toRightOf="@+id/id_storage"
                                android:text="My Storage"
                                android:textSize="15sp" />

                        </RelativeLayout>

                        <View
                            style="@style/horizontal_line"
                            android:layout_alignBottom="@+id/activityMyPageMyStorageLL"
                            android:layout_marginTop="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="20dp"
                            android:text=" General Settings"
                            android:textColor="@color/colorBlack"
                            android:textSize="23sp" />


                        <RelativeLayout
                            android:id="@+id/activityAboutSaveMemory"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:orientation="horizontal">

                            <android.support.v7.widget.AppCompatImageView
                                android:id="@+id/abtSv"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_centerVertical="true"
                                android:padding="5dp"
                                android:src="@drawable/ic_businessman" />


                            <TextView
                                style="@style/bluetext"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="10dp"
                                android:layout_marginLeft="32dp"
                                android:layout_toRightOf="@+id/abtSv"
                                android:text="About SaveMemory"
                                android:textSize="15sp" />

                        </RelativeLayout>

                        <View
                            style="@style/horizontal_line"
                            android:layout_alignBottom="@+id/activityMyPageMyStorageLL"
                            android:layout_marginTop="8dp" />


                        <RelativeLayout
                            android:id="@+id/activityChangePassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:orientation="horizontal">

                            <android.support.v7.widget.AppCompatImageView
                                android:id="@+id/ivChangePassword"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_alignParentTop="true"
                                android:layout_marginTop="0dp"
                                android:padding="5dp"
                                android:src="@drawable/ic_keyone" />


                            <TextView
                                style="@style/bluetext"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start|center"
                                android:layout_marginStart="10dp"
                                android:layout_toRightOf="@+id/ivChangePassword"
                                android:text="Change Password"
                                android:textSize="15sp" />

                        </RelativeLayout>

                        <View
                            style="@style/horizontal_line"
                            android:layout_alignBottom="@+id/activityMyPageMyStorageLL"
                            android:layout_marginTop="8dp" />


                        <RelativeLayout
                            android:id="@+id/activityLockScreen"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:orientation="horizontal">

                            <android.support.v7.widget.AppCompatImageView
                                android:id="@+id/icLock"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:padding="5dp"
                                android:src="@drawable/ic_lock_black_24dp" />


                            <TextView
                                style="@style/bluetext"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start|center"
                                android:layout_marginStart="10dp"
                                android:layout_toRightOf="@+id/icLock"
                                android:text="Lock Screen"
                                android:textSize="15sp" />

                        </RelativeLayout>

                        <View
                            style="@style/horizontal_line"
                            android:layout_alignBottom="@+id/activityMyPageMyStorageLL"
                            android:layout_marginTop="8dp" />


                        <RelativeLayout
                            android:id="@+id/activityPayment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:orientation="horizontal">

                            <android.support.v7.widget.AppCompatImageView
                                android:id="@+id/ivPayment"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:padding="5dp"
                                android:src="@drawable/ic_payment" />


                            <TextView
                                style="@style/bluetext"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start|center"
                                android:layout_marginStart="10dp"
                                android:layout_toRightOf="@+id/ivPayment"
                                android:text="Payment"
                                android:textSize="15sp" />

                        </RelativeLayout>

                        <View
                            style="@style/horizontal_line"
                            android:layout_alignBottom="@+id/activityMyPageMyStorageLL"
                            android:layout_marginTop="8dp" />

                        <RelativeLayout
                            android:id="@+id/activityChangeLanguage"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:orientation="horizontal">

                            <android.support.v7.widget.AppCompatImageView
                                android:id="@+id/ivChangeLanguage"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:padding="5dp"
                                android:src="@drawable/ic_language" />


                            <TextView
                                style="@style/bluetext"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start|center"
                                android:layout_marginStart="10dp"
                                android:layout_toRightOf="@+id/ivChangeLanguage"
                                android:text="Change Language"
                                android:textSize="15sp" />

                        </RelativeLayout>

                        <View
                            style="@style/horizontal_line"
                            android:layout_alignBottom="@+id/activityMyPageMyStorageLL"
                            android:layout_marginTop="8dp" />

                        <RelativeLayout
                            android:id="@+id/activityFontSize"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:orientation="horizontal">

                            <android.support.v7.widget.AppCompatImageView
                                android:id="@+id/ivFont"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:padding="5dp"
                                android:src="@drawable/ic_font" />


                            <TextView
                                style="@style/bluetext"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start|center"
                                android:layout_marginStart="10dp"
                                android:layout_toRightOf="@+id/ivFont"
                                android:text="Font and Font Size"
                                android:textSize="15sp" />

                        </RelativeLayout>

                        <View
                            style="@style/horizontal_line"
                            android:layout_alignBottom="@+id/activityMyPageMyStorageLL"
                            android:layout_marginTop="8dp" />


                        <RelativeLayout
                            android:id="@+id/activityAsk"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:orientation="horizontal">

                            <android.support.v7.widget.AppCompatImageView
                                android:id="@+id/ivAsk"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:padding="5dp"
                                android:src="@drawable/ic_info" />


                            <TextView
                                style="@style/bluetext"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start|center"
                                android:layout_marginStart="10dp"
                                android:layout_toRightOf="@+id/ivAsk"
                                android:text="Ask"
                                android:textSize="15sp" />

                        </RelativeLayout>

                        <View
                            style="@style/horizontal_line"
                            android:layout_alignBottom="@+id/activityMyPageMyStorageLL"
                            android:layout_marginTop="8dp" />


                        <RelativeLayout
                            android:id="@+id/activityFaq"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:orientation="horizontal">

                            <android.support.v7.widget.AppCompatImageView
                                android:id="@+id/ivFaq"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:padding="5dp"
                                android:src="@drawable/ic_help" />


                            <TextView
                                style="@style/bluetext"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start|center"
                                android:layout_marginStart="10dp"
                                android:layout_toRightOf="@+id/ivFaq"
                                android:text="FAQ"
                                android:textSize="15sp" />

                        </RelativeLayout>

                        <View
                            style="@style/horizontal_line"
                            android:layout_alignBottom="@+id/activityMyPageMyStorageLL"
                            android:layout_marginTop="8dp" />


                        <RelativeLayout
                            android:id="@+id/logoutLL"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginTop="100dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_centerVertical="true"
                                android:layout_toLeftOf="@+id/logOut"
                                android:src="@drawable/ic_logout" />

                            <TextView
                                android:id="@+id/logOut"
                                style="@style/bluetext"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="8dp"
                                android:text="Logout"
                                android:textSize="18sp" />


                        </RelativeLayout>


                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>
</ScrollView>

