<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:scaleType="fitXY"
        android:src="@drawable/comman_page" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/activitySignUpTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="Create an Account"
            android:textColor="@color/textPrimary"
            android:textSize="25sp"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/edit_back"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:src="@drawable/msg_icon"
                android:tint="@color/textPrimary" />

            <EditText
                android:id="@+id/activitySignUpEmailET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="10dp"
                android:layout_weight="0.10"
                android:background="@null"
                android:hint="Enter email address"
                android:inputType="textEmailAddress"
                android:textColor="@color/colorPrimaryDark"
                android:textColorHint="#272727"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/edit_back"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:src="@drawable/key_icon"
                android:tint="@color/textPrimary" />

            <EditText
                android:id="@+id/activitySignUpPasswordET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="10dp"
                android:layout_weight="0.10"
                android:background="@null"
                android:hint="Enter password"
                android:inputType="textPassword"
                android:textColor="@color/colorPrimaryDark"
                android:textColorHint="#272727"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/edit_back"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:src="@drawable/key_icon"
                android:tint="@color/textPrimary" />

            <EditText
                android:id="@+id/activitySignUpVerifyPasswordET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="10dp"
                android:layout_weight="0.10"
                android:background="@null"
                android:hint="Confirm password"
                android:inputType="textPassword"
                android:textColor="@color/colorPrimaryDark"
                android:textColorHint="#272727"
                android:textSize="15sp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/activitySignUpPrivacyPolicyLL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/activitySignUpVerifyPasswordET"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/activitySignUpPrivacyPolicyCB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="#616161"
                android:text="Privacy Policy"
                android:textColor="#616161"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/activitySignUpPrivacyPolicyTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:gravity="center"
                android:text="(Click Here to Read)"
                android:textColor="@color/newPrimaryColor" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/activitySignUpTermsLL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/activitySignUpPrivacyPolicyLL"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/activitySignUpTermsCB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="#616161"
                android:text="Terms of services"
                android:textColor="#616161"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/activitySignUpTermsTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:gravity="center"
                android:text="(Click Here to Read)"
                android:textColor="@color/newPrimaryColor" />

        </LinearLayout>

        <Button
            android:id="@+id/activitySignUpCreateCV"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_back"
            android:text="Create an Account"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="18sp"></Button>

    </LinearLayout>


</LinearLayout>